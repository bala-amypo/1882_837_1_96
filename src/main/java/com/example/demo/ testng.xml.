# Delete any existing testng.xml folder/file
rm -rf testng.xml

# Create the testng.xml file with valid content
cat <<EOF > testng.xml
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="LeaveOverlapTestSuite" verbose="1">
    <listeners>
        <listener class-name="com.example.demo.TestResultListener" />
    </listeners>
    <test name="AnalyzerTests">
        <classes>
            <class name="com.example.demo.LeaveOverlapTeamCapacityAnalyzerTest" />
        </classes>
    </test>
</suite>
EOF